{
  "name": "vscode-dfdl",
  "displayName": "vscode-dfdl",
  "description": "An extension that enables auto completion of xml/dfdl for Data Format Description language schemas",
  "version": "0.0.1",
  "publisher": "nteligen",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "dfdl",
        "aliases": [
          "dfdl",
          "dfdl"
        ],
        "extensions": [
          "dfdl.xsd"
        ],
        "configuration": "./dfdl.language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dfdl",
        "scopeName": "text.xml.dfdl.xsd",
        "path": "./syntaxes/dfdl.tmLanguage.json"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "vscode-dfdl",
        "properties": {
          "vscode-dfdl.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enables the highlighting and status bar",
            "scope": "resource"
          },
          "vscode-dfdl.showPath": {
            "type": "boolean",
            "default": true,
            "description": "Enables showing tag's path in status bar",
            "scope": "resource"
          },
          "vscode-dfdl.showRuler": {
            "type": "boolean",
            "default": true,
            "description": "Enables showing highlighted tag pair in ruler section",
            "scope": "resource"
          },
          "vscode-dfdl.highlightSelfClosing": {
            "type": "boolean",
            "default": false,
            "description": "Should self-closing tags be highlighted",
            "scope": "resource"
          },
          "vscode-dfdl.highlightFromContent": {
            "type": "boolean",
            "default": true,
            "description": "Whether to highlight matching tag from inside the tag content",
            "scope": "resource"
          },
          "vscode-dfdl.highlightFromName": {
            "type": "boolean",
            "default": true,
            "description": "Whether to highlight matching tag from the tag name",
            "scope": "resource"
          },
          "vscode-dfdl.highlightFromAttributes": {
            "type": "boolean",
            "default": true,
            "description": "Whether to highlight matching tag from the tag attributes",
            "scope": "resource"
          },
          "vscode-dfdl.noDefaultEmptyElements": {
            "type": "boolean",
            "default": false,
            "description": "Don't use default HTML empty elements",
            "scope": "resource"
          },
          "vscode-dfdl.customEmptyElements": {
            "type": "array",
            "default": null,
            "description": "Custom empty elements in addition to the default HTML empty elements",
            "scope": "resource"
          },
          "vscode-dfdl.styles": {
            "opening": {
              "left": {
                "underline": "yellow"
              },
              "right": {
                "surround": "#155FFA"
              },
              "name": {
                "highlight": "rgba(180, 20, 80, 0.3)"
              }
            },
            "closing": {
              "full": {
                "custom": {
                  "dark": {
                    "borderWidth": "0 0 1px 0",
                    "borderColor": "white",
                    "borderStyle": "solid",
                    "borderRadius": "4px",
                    "right": "10px"
                  },
                  "light": {
                    "borderWidth": "0 0 1px 0",
                    "borderColor": "brown",
                    "borderStyle": "solid",
                    "borderRadius": "4px",
                    "right": "10px"
                  }
                }
              }
            }
          }
        }
      }
    ],
    "commands": [
      {
        "command": "highlight-matching-tag.jumpToMatchingTag",
        "title": "Jump to matching tag",
        "category": "Highlight Matching Tag"
      },
      {
        "command": "highlight-matching-tag.selectPairContents",
        "title": "Select contents of matching tag pair",
        "category": "Highlight Matching Tag"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:dfdl"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.17.33",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rt320/vscode-dfdl"
  },
  "dependencies": {
    "@types/moo": "^0.5.5",
    "moo": "^0.5.1"
  }
}
